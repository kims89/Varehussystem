<script>
    function funcModalDelete(id) {
        $('#modalDelete')
            .modal({
                onApprove: function () {
                    funcDeleteProduct(id);
                }
            })
            .modal('show');
    }

    function funcDeleteProduct(id) {
        console.log("Følgende fjernet fra frontend " + id);
        $.post("/api/deletewarehouse/" + id, function (data, status) {
            $("#messages").html('<div class="ui red message">Varelager er fjernet</div>');
            $("#" + id).remove();
        });
    }
</script>